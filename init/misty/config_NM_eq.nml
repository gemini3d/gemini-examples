
&base
ymd = 2024,4,11               ! year, month, day
UTsec0 = 68400.0              ! start time in UT seconds
tdur = 86400.0                  ! duration of simulation in seconds
dtout = 1800.0                  ! how often to do file output
activ = 170.0,170.0,5.0       ! f107a,f107,Ap
tcfl = 0.9                    ! target cfl number
Teinf = 1500.0                ! exospheric electron temperature
/

&flags
potsolve = 0        ! solve electrodynamics:   0 - no; 1 - electrostatic; 2 - inductive
flagperiodic = 0    ! whether periodic
flagoutput = 1      ! 1 - full output
/

&setup
dtheta=9.75
dphi=15
lp=96
lq=384
lphi=48
altmin=80e3
glat=34.0
glon=254.0
gridflag=0
flagsource=1
grid_openparm=10.0
nmf=5e11
nme=2e11
/

&files
indat_size = 'inputs/simsize.h5'
indat_grid = 'inputs/simgrid.h5'
indat_file = 'inputs/initial_conditions.h5'
/
