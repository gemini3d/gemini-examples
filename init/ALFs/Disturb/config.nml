&base
ymd = 2008,3,26               ! year, month, day
UTsec0 = 12600.0              ! start time in UT seconds
tdur = 3600.0                  ! duration of simulation in seconds
dtout = 30.0                  ! how often to do output
activ = 150.0,150.0,50.0      ! f107a,f107,Ap
tcfl = 0.9                    ! target cfl number
Teinf = 3000.0                ! exospheric electron temperature
/

&setup
glat = 65
glon = 213
xdist = 1500e3             ! eastward distance (meters)
ydist = 40e3             ! northward distance (meters)
lxp = 1
lyp = 256
Bincl = 90
nmf = 5e11
nme = 2e11
alt_min = 80e3
!alt_min = 10e3
alt_max = 925e3
!alt_scale = 10e3, 9.9e3, 500e3, 150e3  ! altitude grid scales (meters)
!alt_scale = 10e3, 4e3, 500e3, 150e3  ! altitude grid scales (meters)
alt_scale = 10e3, 8e3, 500e3, 150e3
eq_dir = "~/simulations/ssd_ext/ALF_eq"
Efield_latwidth = 0.050
Jtarg = 9.0e-6
Jtarg_function = "fac_said"
Efield_llat = 1024
/

&flags
potsolve = 1      ! solve electrodynamics:   0 - no; 1 - electrostatic; 2 - inductive
flagoutput = 0
/

&files
indat_size = 'inputs/simsize.h5'
indat_grid = 'inputs/simgrid.h5'
indat_file = 'inputs/initial_conditions.h5'
/

&efield
dtE0 = 60.0
E0_dir = 'inputs/Efield/'
/

!&precip_BG
!PhiWBG=0.1                   ! total energy flux (mW/m^2)
!W0BG=3000.0                      ! characteristic energy (eV)
!/

&precip_BG
PhiWBG=1e-5                   ! total energy flux (mW/m^2)
W0BG=3000.0                      ! characteristic energy (eV)
/

&FBI
flagFBI = 2      ! Farley-Buneman Instability: 0 - no; 1 - Only anomalous heating; 2 - Anomalous heating + nonlinear current
/

! (optional - default value of 2)
&diffusion
diffsolvetype = 1             ! type of diffusion solver to use:  1 - backward Euler; 2 - TRBDF2
/

!&milestone
!mcadence = 4
!/

&evibcool
flagevibcool=1
/
