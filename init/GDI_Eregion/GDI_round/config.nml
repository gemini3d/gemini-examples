! this is a gradient drift instability simulation

&base
ymd = 2013,2,20               ! year, month, day
UTsec0 = 18000.0              ! start time in UT seconds
tdur = 900.0                  ! duration of simulation in seconds
dtout = 30.0                   ! how often to do file output
activ = 150.0,150.0,50.0      ! f107a,f107,Ap
tcfl = 0.9                    ! target cfl number
Teinf = 1500.0                ! exospheric electron temperature
/

&setup
glat = 75.6975
glon = 265.1678
xdist = 1531e3                ! eastward distance (meters), including a large low-res buffer for solvers
ydist = 1531e3                ! northward distance (meters)
lxp = 384
!lyp = 344
lyp = 100
!x2parms = 350e3,2.9e3,5e3,50e3
!x3parms = 350e3,2.9e3,5e3,50e3
x2parms = 350e3,1.5e3,5e3,50e3
x3parms = 350e3,1.5e3,5e3,50e3
Bincl = 90
alt_min = 80e3
alt_max = 975e3
alt_scale = 50e3, 45e3, 400e3, 150e3 ! super coarse along the field line
!alt_scale = 10e3, 8e3, 500e3, 150e3
Eyit = -45e-3

eq_dir = '~/simulations/ssd/risr3d_eq/'
eq_archive = '~/simulations/risr3d_eq.zip'
eq_url = 'https://zenodo.org/record/3980312/files/risr3d_eq.zip?download=1'

setup_functions = 'perturb', 'gemini3d.model.Efield_BCs'
/

&flags
potsolve = 1      ! solve electrodynamics:   0 - no; 1 - electrostatic; 2 - inductive
flagperiodic = 0
flagoutput = 1
/

&files
indat_size = 'inputs/simsize.h5'
indat_grid = 'inputs/simgrid.h5'
indat_file = 'inputs/initial_conditions.h5'
/

&efield
dtE0 = 15.0
E0_dir = 'inputs/Efield/'
/

&Jpar
flagJpar=.false.
/

! PhiWBG=0.05    !good for illustrating effects of precip -> damping
! PhiWBG=1e-3

&precip_BG
PhiWBG=1e-3
W0BG=3e3
/

! magcap=5.0    !good for showing damping due to m'sphere...

&capacitance
flagcap=1       !use inertial capacitance? 0 - set all to zero, 1 - use ionosphere to compute, 2 - add a magnetospheric part
magcap=0.0
/

&milestone
mcadence=4
/

&lagrangian
flaglagrangian=.true.
/

&diamagnetic
flagdiamagnetic=.true.
/
